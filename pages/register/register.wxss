/* pages/register/register.wxss */
page {
    background-color: white;
    background-size:100% 100%;

}
.radio_ .wx-radio-input{
  height: 30rpx;
  width: 30rpx;
  border: 1px solid #0044ff
}
.headers{
   display: flex;
  flex-direction: column;
  align-items: center;
}
.image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.login-from{
  margin: 0 auto;
    padding-top: 20%;
    margin-top: 10%;
    background-color: #ffffff;
    box-shadow: 2px 2px 5px #0044ff;
    width: 90%;
    border-radius: 10px 10px 10px 10px;

}

/*表单内容*/
.inputView {
    border-radius: 10px 10px 10px 10px;
    line-height: 40px;
    width: 90%;
    margin:0px auto;

}

.usernameLabel, .passwordLabel, .passwordConfirmLabel, .nicknameLabel{
    margin: 15px 0px 3px 3px;
    color: gray;
    font-size: 15px;
}

.inputText {
    float: right;
    text-align: right;
    margin-right: 22px;
    margin-top: 5px;
    font-size: 15px;
}

.line {
    width: 80%;
    margin: 0 auto;
    height: 1px;
    background-color: gainsboro;
    margin-top: 1px;
}

/*按钮*/
.button{
  height:auto;
  margin:auto;
  margin-top: 25px;
  padding-bottom: 3px;
  width: 60%;
}
.loginBtn {
background-color: #0044ff;
font-size: 30rpx;
  border-radius:25px;
  color: white;
}