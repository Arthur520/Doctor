<!--pages/find/find.wxml-->
 <!--导航条-->  
 <view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">健康资讯</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">药物常识</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">医学研究</view>
</view>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
  <swiper-item class="item-list-group">
  <block wx:for="{{firstArticleList}}" wx:key="index" wx:for-item="article">
    <view class="item-group" data-id="{{article.id}}" bindtap="toarticle">
      <image src='{{article.image}}' class='img'></image>
      <view class="info-group">     
      <text class="info">{{article.title}}</text>
      </view>     
    </view>
    </block>
  </swiper-item>

  <swiper-item class="item-list-group">
    <block wx:for="{{secondArticleList}}" wx:key="index" wx:for-item="article">
    <view class="item-group" data-id="{{article.id}}" bindtap="toarticle">
      <image src='{{article.image}}' class='img'></image>
      <view class="info-group">     
      <text class="info">{{article.title}}</text>
      </view>     
    </view>
    </block>
  </swiper-item>

  <swiper-item class="item-list-group">
    <block wx:for="{{thirdArticleList}}" wx:key="index" wx:for-item="article">
    <view class="item-group" data-id="{{article.id}}" bindtap="toarticle">
      <image src='{{article.image}}' class='img'></image>
      <view class="info-group">     
      <text class="info">{{article.title}}</text>
      </view>     
    </view>
    </block>
  </swiper-item>
  
</swiper>
