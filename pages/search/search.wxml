<!--pages/search/search.wxml-->
<!--导航条-->  
 <view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">医生</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">医院</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">科室</view>
  <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">疾病</view>
</view>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
  <swiper-item class="item-list-group">
 <block wx:if="{{doctorSearchLength!=0}}">
  <block wx:for="{{doctorSearchList}}" wx:key="index" wx:for-item="doctor">
 <view class="item-group"data-id="{{doctor.id}}"bindtap="toDoctor">
    <image src="{{doctor.photo}}" class="doctorimg"></image>
    <view class="info-group">
    <view class="title">{{doctor.name}}</view>
    <view class="faninfo">关注：{{doctor.fans}}</view>
    <view class="dinfo">{{doctor.department}}/{{doctor.hospital}}</view>
    </view>
    </view>
  </block>
  </block>
  <block wx:if="{{doctorSearchLength==0}}">
  <text class="nothing">未搜索到该类结果</text>
  </block>
  </swiper-item>

  <swiper-item class="item-list-group">
 <block wx:if="{{hospitalSearchLength!=0}}">
  <block wx:for="{{hospitalSearchList}}" wx:key="index" wx:for-item="doctor">
 <view class="item-group"data-id="{{doctor.id}}"bindtap="toDoctor">
    <image src="{{doctor.photo}}" class="doctorimg"></image>
    <view class="info-group">
    <view class="title">{{doctor.name}}</view>
    <view class="faninfo">关注：{{doctor.fans}}</view>
    <view class="dinfo">{{doctor.department}}/{{doctor.hospital}}</view>
    </view>
    </view>
  </block>
  </block>
  <block wx:if="{{hospitalSearchLength==0}}">
  <text class="nothing">未搜索到该类结果</text>
  </block>
  </swiper-item>

  <swiper-item class="item-list-group">
 <block wx:if="{{departmentSearchLength!=0}}">
  <block wx:for="{{departmentSearchList}}" wx:key="index" wx:for-item="doctor">
 <view class="item-group"data-id="{{doctor.id}}"bindtap="toDoctor">
    <image src="{{doctor.photo}}" class="doctorimg"></image>
    <view class="info-group">
    <view class="title">{{doctor.name}}</view>
    <view class="faninfo">关注：{{doctor.fans}}</view>
    <view class="dinfo">{{doctor.department}}/{{doctor.hospital}}</view>
    </view>
    </view>
  </block>
  </block>
  <block wx:if="{{departmentSearchLength==0}}">
  <text class="nothing">未搜索到该类结果</text>
  </block>
  </swiper-item>

  <swiper-item class="item-list-group">
 <block wx:if="{{diseaseSearchLength!=0}}">
  <block wx:for="{{diseaseSearchList}}" wx:key="index" wx:for-item="doctor">
 <view class="item-group"data-id="{{doctor.id}}"bindtap="toDoctor">
    <image src="{{doctor.photo}}" class="doctorimg"></image>
    <view class="info-group">
    <view class="title">{{doctor.name}}</view>
    <view class="faninfo">关注：{{doctor.fans}}</view>
    <view class="dinfo">{{doctor.department}}/{{doctor.hospital}}</view>
    </view>
    </view>
  </block>
  </block>
  <block wx:if="{{diseaseSearchLength==0}}">
  <text class="nothing">未搜索到该类结果</text>
  </block>
  </swiper-item>
  
</swiper>
