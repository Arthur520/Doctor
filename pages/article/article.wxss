/* pages/article/article.wxss */
.content{
   /* display: flex;  */
   flex-direction: colum;
   margin-top: 30rpx;
   margin-bottom: 30rpx;
   background-color: #fff;
   /* border-bottom: 1px solid #ededed;  */
   border-top: 1px solid #ededed; 
   padding-bottom: 5px; 
}
.title{
  font-size: 34rpx;
  font-weight: 600;
  color:#333;
  margin-bottom: 20px;
}
.image{
  margin-left: 16px;
  width: 100%;
  height: 350rpx;
  margin: auto 0;
  margin-top: 10px;
  margin-bottom: 10px;
}
.article-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 30rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.article-text{
  vertical-align: middle;
}
.review-list{
  display: flex;
  flex-direction: column;
}
.review-list .review-item{
  padding: 10rpx 0;
  border-bottom: 1px solid #D4D4D4;
  display:flex;
  flex-direction: row;
  position: relative;
}

.userImg{
  width: 60rpx;
  height:72rpx;
  
}
.review-text{ 
  font-size: 21rpx;
  word-break: break-all;
  margin-left:10rpx;
}
.date{
  font-size: 21rpx;
  word-break: break-all;
  position: absolute;
  bottom:0;
  right:0;
}
.bottom{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 0;
}
.like{
  width: 40rpx;
  height: 40rpx;
}
.review{
  width: 40rpx;
  height: 40rpx;
}
.share{
  width: 40rpx;
  height:40rpx;
}
.picText{
  display: flex;
  flex-direction: column;
}
.pictitle{
  font-size: 24rpx;
}
.commentInputView{
  width: 100%;
  height: 100rpx;
  background-color: rgba(204, 204, 204, 0.61);
  padding: 4%;
  position: fixed;
  display: flex;
  justify-content: space-between;
}
.commentInput{
  width:70%;
  background-color:#fff;
  font-size:28rpx;
  border-radius:15rpx;
  display: flex;
  align-items: center;
  
}
 
.input{
  width:100%;
  height:100rpx;
  padding: 15rpx;
  font-size: 30rpx;
  margin: 0 auto;
  overflow: hidden;
  line-height-step:20rpx;
  border: 0;
}
.send{
  width: 10rpx;
  height: 65rpx;
  color: #fff;
  font-size: 34rpx;
  border: 0;
  margin-left:40rpx;
  margin-top:25rpx;
}
.share{
  width: 50rpx;
  height: 50rpx;
  background-size: 45rpx 45rpx;
  background-repeat:no-repeat;
}
.share::after{
  border:none; 
}
.bottom-line{
  display: flex;
  height: 100rpx;
  justify-content: center;
  align-items: center;
}
.bottom-line text{
  font-size: 10pt;
  color: #666;
}